Xft.antialias: 1
Xft.rgba: rgb
Xft.lcdfilter: lcddefault

URxvt.saveLines: 1000
URxvt.scrollBack: false
URxvt.scrollBar: false
URxvt.scrollstyle: plain

URxvt.urlLauncher: google-chrome-stable
URxvt.urgentOnBell: true

! Enable Ctrl+Arrow key support (navigate words in bash, etc.)
URxvt.keysym.Control-Up:    \033[1;5A
URxvt.keysym.Control-Down:  \033[1;5B
URxvt.keysym.Control-Left:  \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C

! vtwheel enables better mouse wheel scrolling (eg. when inside an editor)
URxvt.perl-ext-common: vtwheel

