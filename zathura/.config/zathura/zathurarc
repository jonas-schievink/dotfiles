# Default: s
# v enables the vertical scroll bar
set guioptions sv

# Copy to Ctrl+V clipboard, not middle mouse button clipboard
set selection-clipboard clipboard

set recolor true

# Solarized dark
set recolor-darkcolor "#839496"
set recolor-lightcolor "#002b36"

# Solarized light
#set recolor-darkcolor  "#657b83"
#set recolor-lightcolor "#fdf6e3"

