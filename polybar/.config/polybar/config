[module/filesystem]
type = internal/fs
interval = 60

mount-0 = /
mount-1 = /boot

; Available tokens:
;   %mountpoint%
;   %type%
;   %fsname%
;   %percentage_free%
;   %percentage_used%
;   %total%
;   %free%
;   %used%
; Default: %mountpoint% %percentage_free%%
# TODO: Figure out how to reference color variables from in there
label-mounted = %{F#268bd2}%mountpoint%%{F-} %free%
label-mounted-underline = ${colors.yellow}
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}
spacing = ${root.module-margin-left}

[module/i3]
type = internal/i3

; Only show workspaces defined on the same output as the bar
;
; Useful if you want to show monitor specific workspaces
; on different bars
;
; Default: false
pin-workspaces = true

; This will split the workspace name on ':'
; Default: false
strip-wsnumbers = true

; Sort the workspaces by index instead of the default
; sorting that groups the workspaces by output
; Default: false
index-sort = true

enable-click = true
enable-scroll = false

; Available tags:
;   <label-state> (default) - gets replaced with <label-(focused|unfocused|visible|urgent)>
;   <label-mode> (default)
format = <label-state> <label-mode>

label-mode = %mode%
label-mode-padding = 3

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-focused = %icon%%name%
label-focused-foreground = ${colors.foreground-alt}
label-focused-background = ${colors.background-alt}
label-focused-underline = ${colors.yellow}
label-focused-padding = 3

label-unfocused = ${self.label-focused}
label-unfocused-padding = ${self.label-focused-padding}

label-visible = ${self.label-focused}
label-visible-underline = ${colors.base01}
label-visible-padding = ${self.label-focused-padding}

label-urgent = ${self.label-focused}
label-urgent-foreground = ${colors.background}
label-urgent-background = ${colors.red}
label-urgent-padding = ${self.label-focused-padding}


[module/mpd]
type = internal/mpd
format-online = <toggle> <label-song>

icon-play = ‚ñ∂
icon-pause = ‚è∏

label-song-maxlen = 55
label-song-ellipsis = true

[module/cpu]
type = internal/cpu
interval = 4
format-prefix = "CPU "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.yellow}
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 12
format-prefix = "MEM "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.yellow}
label = %percentage_used:2%%

[module/date]
type = internal/date
interval = 24

date = %d.%m.
date-alt = %a, %d.%m.%Y

time = %H:%M
time-alt = %H:%M

format-prefix = "üïí "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.yellow}

label = %date% %time%

[module/volume]
type = internal/volume

format-volume = <label-volume>
format-volume-underline = ${colors.yellow}
label-volume = üîâ %percentage%%

format-muted-prefix = "üîá "
format-muted-foreground = ${colors.red}
format-muted-underline = ${colors.red}
label-muted = %percentage%%

[module/temperature]
type = internal/temperature
interval = 20
thermal-zone = 0
warn-temperature = 60

format = <label>
format-underline = ${colors.yellow}
format-prefix = "TEMP "
format-prefix-foreground = ${colors.foreground-alt}
format-warn = <label-warn>
format-warn-underline = ${self.format-underline}
format-warn-prefix = "TEMP "
format-warn-prefix-foreground = ${colors.foreground-alt}

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.alert}

ramp-foreground = ${colors.foreground-alt}

[module/surface-temperature]
inherit = module/temperature

# Surface uses thermal zone 1, zone 0 reports bogus
thermal-zone = 1

[module/battery]
type = internal/battery

; $ ls /sys/class/power_supply/
battery = BAT0
adapter = AC1

full-at = 99

; If an inotify event haven't been reported in this many
; seconds, manually poll for new values.
;
; Needed as a fallback for systems that don't report events
; on sysfs/procfs.
;
; Disable polling by setting the interval to 0.
;
; Default: 5
poll-interval = 5

format-charging-underline = ${colors.blue}
format-charging-prefix = "CHR "
format-charging-prefix-foreground = ${colors.foreground-alt}

format-full-underline = ${colors.green}
format-full-prefix = "FULL "
format-full-prefix-foreground = ${self.format-charging-prefix-foreground}

format-discharging-underline = ${colors.yellow}
format-discharging-prefix = "BAT "
format-discharging-prefix-foreground = ${self.format-charging-prefix-foreground}

[module/github]
type = internal/github

token = ${file:/home/jonas/.config/polybar/.gh-token}

format-underline = ${colors.yellow}
label = GitHub: %notifications%

[module/wlan]
type = internal/network
interface = wlp1s0
interval = 20

format-connected-prefix = "WLAN "
format-connected-prefix-foreground = ${colors.foreground-alt}
format-connected-underline = ${colors.yellow}

label-connected = %essid%

format-disconnected-underline = ${colors.red}

label-disconnected = disconnected
label-disconnected-foreground = ${colors.red}

[settings]
; Reload when the screen configuration changes
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

