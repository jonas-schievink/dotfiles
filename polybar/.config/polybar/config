[colors]
background = ${colors.base02}
background-alt = ${colors.base03}
foreground = ${colors.base1}
foreground-alt = ${colors.base0}
alert = ${colors.red}

# Solarized colors
base03 =    #002b36
base02 =    #073642
base01 =    #586e75
base00 =    #657b83
